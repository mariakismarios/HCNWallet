<div class="top">
	{{#if name}}
		{{#if toName}}
			{{> address address=from name=commonMeta.return class="from" }}
			<span class="action">&nbsp;purchased&nbsp;</span>
			<a href="/name/{{name}}" class="value">{{name}}</a>.kst
		{{else if a}}
			{{> address address=from name=commonMeta.return class="from" }}
			<span class="action">&nbsp;updated&nbsp;</span>
			<a href="/name/{{name}}" class="value">{{name}}</a>.kst
		{{else}}
			{{> address address=from name=commonMeta.return class="from" }}
			<span class="action">
				<i class="icon-right"></i>
				<a href="/name/{{name}}" class="value">{{name}}</a>.kst
				<i class="icon-right"></i>
			</span>
			{{> address address=to name=commonMeta.recipient class="to" }}
		{{/if}}
	{{else}}
		{{> address address=from name=commonMeta.return class="from" }}
		<span class="action">
			<i class="icon-right"></i>
			{{#if name}}
				<a href="/name/{{name}}" class="value">{{name}}</a>.kst
			{{else}}
				<span class="value">{{krist value}}</span>
			{{/if}}
			<i class="icon-right"></i>
		</span>
		{{> address address=to name=commonMeta.recipient class="to" }}
	{{/if}}
</div>
<div class="info">
	<a href="/transaction/{{id}}"><time class="text-mini" datetime="{{time}}"></time></a>
</div>
{{#if metadata}}
	<div class="meta"></div>
{{/if}}